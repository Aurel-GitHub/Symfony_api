{% extends 'base.html.twig' %}
{% block body %}
<article>
        <h2>{{ article.title }}</h2>
        <div class="metadata"> Écrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i')}}
            dans la catégorie {{ article.category.title }}</div>
        <div class="content">
            <img src="{{ article.image }}" alt="image">
            <p>{{ article.content | raw }}</p>
        </div>
        <br>
</article>
<section id="commentaires">
    {% for comment in article.comments %}
    <div class="comment">
        <div class="col-6">
            <h5>{{ comment.author }}</h5> (<small>{{ comment.createdAt |date('d/m/Y à H:i') }}</small>)
        </div>
        <div class="col">
            {{ comment.content |raw }}
        </div>
        <div class="trait">
            -----------------
        </div>
    </div>
    {% endfor %}
</section>
{% endblock %}
